<div class="container margin-top padding-btm">
	<div class="col-md-6 col-md-offset-3">
		<h1>Sign in!</h1>

		<%= form_tag '/login', remote: true do %>

			<div class="form-group">
				<%= label_tag :email %>
				<%= text_field_tag :email, "", class:"form-control" %>
			</div>

			<div class="form-group">
				<%= label_tag :password %>
		 		<%= password_field_tag :password, "", class:"form-control" %>
		 	</div>

		  	<%= submit_tag "Submit", class:"btn btn-primary align-center" %>
		<% end %>
	</div>
</div>
