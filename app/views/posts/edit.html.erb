<div class="container">
	<h1>Edit job post:</h1>

	<%= form_for @post, url: user_post_path(current_user.id), method: :put do |form| %>
		<%= form.hidden_field :user_id, value:current_user.id %>

		<div class="form-group">
			<%= form.label :status, "Availability" %>
        	<%= form.select :status, options_for_select([:available, :expired], :available), {}, class:"form-control custom-select" %>
        </div>

		<div class="form-group">
			<%= form.label :name %>
			<%= form.text_field :name, class:"form-control" %>
		</div>

		<div class="form-group">
			<%= form.label :description %>
			<%= form.text_area :description, class:"form-control", rows: "8"%>
		</div>

	  	<%= form.submit "Submit", class:"btn btn-primary align-center" %>
	<% end %>
</div>
